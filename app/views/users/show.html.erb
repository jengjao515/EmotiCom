<div class="row">
	<div class="col-md-12 user-top">
		<div class="col-md-4">
			<img src="<%= @user.avatar %>"/>
			 <%= @user.name %>
		</div>
		<div class="col-md-4"><%= link_to "Create a Post", new_post_path %></div>
		<div class="col-md-4"><%= link_to "Logout", logout_path %></div>
	</div>
</div>

<div class="row">
	<div class="col-md-8 user-top">
		<p><% @posts.each do |post| %>
			<%= post.description %><br>
		<% end %></p>
	</div>
</div>
